<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_splash"
    tools:context="com.example.d8.myapplication.ReceiptDetailActivity">

    <ImageView
        android:id="@+id/business_logo"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:scaleType="centerInside"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/walmart_logo"
        tools:layout_editor_absoluteX="151dp"
        tools:layout_editor_absoluteY="88dp" />

    <LinearLayout
        android:id="@+id/layout_item_list"
        android:layout_width="360dp"
        android:layout_height="500dp"
        android:layout_below="@+id/business_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@color/colorEceiptWhite"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:text="Date" />
        <View
            android:layout_width="350dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@android:color/holo_blue_dark" />

        <ListView
            android:id="@+id/item_list_view"
            android:layout_width="match_parent"
            android:layout_height="420dp" />

        <View
            android:layout_width="350dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@android:color/holo_blue_dark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total costï¼š"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textColor="@color/colorEceiptDarkGrey"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/total_cost"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingTop="5dp"
                android:paddingBottom="2dp"
                android:paddingRight="18dp"
                android:text="$ 100.00"
                android:textColor="@color/colorEceiptDarkGrey"
                android:textSize="22dp"
                android:textStyle="bold" />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="16dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/layout_item_list"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerInside"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:layout_weight="1"
            app:srcCompat="@drawable/share_logo" />
        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerInside"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:layout_weight="1"
            app:srcCompat="@drawable/share_logo" />
        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerInside"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:layout_weight="1"
            app:srcCompat="@drawable/share_logo" />
        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerInside"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:layout_weight="1"
            app:srcCompat="@drawable/share_logo" />
    </LinearLayout>


</RelativeLayout>
